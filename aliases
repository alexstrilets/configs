# enable color support of ls and also add handy aliases
alias ls='ls -GF'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'

# git aliases
alias gs='git status -bs'
alias gc='git checkout'
alias gh='git hist'

# tmux commands
alias tls='tmux list-sessions'
alias tkill='tmux kill-session -t'
alias tnew='tmux new-session -s'

alias howto='cat ~/configs/howto | less'

#this should only be available on Mac
alias dm='valgrind --tool=memcheck --leak-check=full --show-reachable=yes --track-origins=yes'
alias cleandc='docker rm $(docker ps -a -q | grep -v "$(echo "one" && docker ps  -q)")'
alias sql='mysql --host=hydra --port=3306 --user=root --password=man0war'
alias dc='docker-compose'
alias dls='docker images'
alias drm='docker rmi'
# alias sphp='rsync -a ~/src/coralapi/php/ astrilet@129.128.222.10:~/src/coralapi/'
